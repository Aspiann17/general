<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_nav_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="main_content_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/main_content_item_background</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="main_content_item_right_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_content_item_right_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_content_item_right_text_top_style" parent="main_content_item_right_text_style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="main_content_item_right_text_bottom_style" parent="main_content_item_right_text_style">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="main_content_item_img_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:background">@drawable/main_nav_icon_background</item>
    </style>
    
    <style name="main_content_item_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="info_content_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="info_content_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>